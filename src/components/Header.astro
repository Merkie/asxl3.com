---
// import dnastrand from "../dna-strand.png";
import HeaderMobile from "./HeaderMobile.svelte";
---

<header class="px-4 h-[80px] gap-4 shadow-lg flex items-center z-40">
  <a href="/">
    <span class="flex items-center gap-2">
      <img class="w-[70px] md:w-[100px]" src={"/dna-strand.png"} alt="" />
      <span class="flex flex-col">
        <h1 class="font-bold text-2xl md:text-4xl">ASXL3</h1>
        <small class="opacity-70 -translate-y-1 md:-translate-y-0"
          >Bainbridge-Ropers Syndrome</small
        >
      </span>
    </span>
  </a>
  <div class="flex-1"></div>
  <a
    class="transition hidden md:block text-navy-blue-500 hover:underline"
    href="/information">Patient & Family Resources</a
  >
  <a
    class="transition hidden md:block text-navy-blue-500 hover:underline"
    href="/families">Meet The Families</a
  >
  <a
    class="transition hidden md:block border border-navy-blue-500 rounded-md p-2 px-4 text-navy-blue-500 hover:bg-navy-blue-500 hover:text-white"
    href="/facebook"
    target="_blank"
  >
    <i class="bi bi-facebook"></i>
    ASXL3 Families Group
  </a>
  <a
    href="/donate"
    class="transition hidden md:block bg-navy-blue-500 text-white rounded-md p-2 px-4 font-bold hover:bg-razzmatazz-500"
    >DONATE</a
  >
  <HeaderMobile client:load />
</header>
